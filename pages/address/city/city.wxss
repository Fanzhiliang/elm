/* pages/address/city/city.wxss */
page{
  background-color: #fff;
}

.search--wrap{
  height: 95rpx;
}

.search-row{
  position: fixed;
  top: 0;
  left: 0;
  width: 100%;
  height: 95rpx;
  background-color: #0395FF;
  padding: 20rpx 30rpx;
  box-sizing: border-box;
  z-index: 999;
}

.search-row .search{
  height: 55rpx;
  background-color: #fff;
  display: flex;
  align-items: center;
  border-radius: 55rpx;
  padding: 0 50rpx;
  position: relative;
}

.search-row .icon{
  position: absolute;
  height: 55rpx;
  width: 50rpx;
  line-height: 55rpx;
  text-align: center;
  top: 0;
  left: 0;
}

.search-row .search input{
  width: 100%;
  border: 0;
  padding: 0;
  margin: 0;
  background-color: transparent;
  font-size: 26rpx;
}


.title{
  height: 65rpx;
  line-height: 65rpx;
  background-color: #f5f6f8;
  padding: 0 28rpx;
  color: #b5b3b4;
}


.row{
  height: 90rpx;
  line-height: 90rpx;
  background-color: #fff;
  border-left: 28rpx solid #fff;
  border-bottom: 1rpx solid #f8f8f8;
  box-sizing: border-box;
}

.row.no-border{
  border-bottom: 0;
}

.pinyin-side{
  color: #b1b3b2;
  position: fixed;
  right: 0;
  bottom: 0;
  text-align: left;
  width: 50rpx;
  height: calc(100% - 100rpx);
  overflow: visible;
  display: flex;
  align-items: center;
  align-content: center;
  flex-wrap: wrap;
}

.pinyin-side .item{
  flex-basis: 100%;
  height: 30rpx;
  padding: 5rpx 0;
}

.search-list{
  background-color: #fff;
  position: fixed;
  top: 95rpx;
  left: 0;
  width: 100%;
  height: calc(100% - 95rpx);
  overflow-y: scroll;
}