/* pages/address/select/select.wxss */

page{
  background-color: #f5f6f8;
  min-height: 100%;
}

.top{
  height: 65rpx;
  background-color: #0194fe;
  padding: 10rpx 20rpx;
  display: flex;
  color: #fff;
  align-items: center;
}

.top .city{
  width: 95rpx;
}

.top .arrow{
  width: 0;
  height: 0;
  border: 10rpx solid transparent;
  border-top-color: #fff;
  margin: 10rpx 5rpx 0 5rpx;
}

.top input{
  line-height: 65rpx;
  height: 65rpx;
  flex: 1;
  text-align: center;
  background-color: #fff;
  border-radius: 10rpx;
  color: #000;
}



.title{
  height: 65rpx;
  line-height: 65rpx;
  background-color: #f5f6f8;
  padding: 0 28rpx;
  color: #b5b3b4;
}

.current-address{
  height: 90rpx;
  line-height: 90rpx;
  background-color: #fff;
  padding: 0 30rpx;
  color: #2ba1cf;
}

.current-address .name{
  float: left;
}

.current-address .resest-select{
  float: right;
}

.current-address .resest-select .icon{

}

.address-row{
  padding: 20rpx 28rpx;
  background-color: #fff;
  font-size: 27rpx;
  border: 1rpx solid #f8f8f8;
}

.address-row .top-row{
  display: flex;
  align-items: baseline;
}

.address-row .top-row .tag{
  color: #3bb979;
  border: 1rpx solid #3bb979;
  border-radius: 3rpx;
  height: 30rpx;
  line-height: 30rpx;
  padding: 0 8rpx;
  font-size: 24rpx;
  margin-right: 8rpx;
}

.address-row .top-row .name{
  flex: 1;
  color: #000;
  font-weight: 500rpx;
}

.address-row .bottom-row{
  color: #b5b3b4;
  font-size: 27rpx;
}

.address-row .bottom-row text{
  margin-right: 20rpx;
}

.nearby-row{
  height: 90rpx;
  line-height: 90rpx;
  background-color: #fff;
  border-left: 28rpx solid #fff;
  border-bottom: 1rpx solid #f8f8f8;
  box-sizing: border-box;
}

.nearby-row:last-of-type{
  border-bottom: 0;
}




/* 底部 新增地址 */
.address-footer-wrap{
  height: 100rpx;
}

.address-footer-wrap .address-footer{
  width: 100%;
  height: 100rpx;
  line-height: 100rpx;
  background-color: #fff;
  border-top: 1rpx solid #EEEEEE;
  text-align: center;
  color: #099cdf;
  position: fixed;
  bottom: 0;
  left: 0;
  font-size: 32rpx;
}

.address-footer-wrap .address-footer .icon{
  margin-right: 10rpx;
}



