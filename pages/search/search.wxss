/* pages/search/search.wxss */
@import '/static/styles/shop-list.wxss';

page{
  background-color: #fff;
}

.search--wrap{
  height: 95rpx;
}

.search-row{
  position: fixed;
  top: 0;
  left: 0;
  width: 100%;
  height: 95rpx;
  background-color: #0395FF;
  padding: 20rpx 30rpx;
  box-sizing: border-box;
  z-index: 999;
}

.search-row .search{
  height: 55rpx;
  background-color: #fff;
  display: flex;
  align-items: center;
  border-radius: 55rpx;
  padding: 0 50rpx;
  position: relative;
}

.search-row .icon{
  position: absolute;
  height: 55rpx;
  width: 50rpx;
  line-height: 55rpx;
  text-align: center;
  top: 0;
  left: 0;
}

.search-row .search input{
  width: 100%;
  border: 0;
  padding: 0;
  margin: 0;
  background-color: transparent;
  font-size: 26rpx;
}


/* 搜索前 */
.row-title{
  height: 95rpx;
  line-height: 95rpx;
  color: #696969;
  padding: 0 30rpx;
  margin-bottom: 20rpx;
}

.row-title .icon{
  color: #999999;
  float: right;
  font-size: 36rpx;
  padding: 0 30rpx;
  margin-right: -30rpx;
}


.search-items{
  padding: 0 30rpx;
  display: flex;
  justify-content: space-between;
  align-items: center;
  flex-wrap: wrap;
}

.search-items .search-item{
  height: 65rpx;
  line-height: 65rpx;
  text-align: center;
  padding: 0 30rpx;
  border: 1rpx solid #dcdcdc;
  border-radius: 5rpx;
  color: #696969;
  margin-bottom: 20rpx;
}

.search-items.hot .search-item:first-of-type{
  border-color: #0395FF;
  color: #0395FF;
}


/* 搜索中 */
.keyword-row{
  height: 100rpx;
  line-height: 100rpx;
  padding-left: 80rpx;
  padding-right: 30rpx;
  position: relative;
}

.keyword-row .icon{
  position: absolute;
  width: 80rpx;
  height: 100rpx;
  top: 0;
  left: 0;
  text-align: center;
  font-size: 30rpx;
}

.keyword-row .keyword{
  color: #000;
  border-bottom: 1rpx solid #dcdcdc;
  font-size: 31rpx;
}


/* 完成搜索 */
.sort-dialog-wrap{
  height: 80rpx;
}

.tags-wrap{
  height: 90rpx;
}

.tags-wrap .tags-scroll{
  background-color: #fff;
  height: 90rpx;
  width: 100%;
  position: fixed;
  left: 0;
  top: 175rpx;
  overflow: hidden;
}

.tags-wrap .tags-scroll-inner{
  background-color: #fff;
  height: 150rpx;
  width: 100%;
  word-break: normal;
  white-space: nowrap;
  overflow-x: scroll;
}

/* 隐藏scroll-view滚动条 */
/* ::-webkit-scrollbar{
  width: 0;
  height: 0;
  color: transparent;
} */

.tags-wrap .tag-item{
  display: inline-block;
  height: 70rpx;
  line-height: 70rpx;
  padding: 0 30rpx;
  background-color: #f8f6f7;
  margin-top: 10rpx;
  margin-bottom: 10rpx;
  margin-left: 30rpx;
  border-radius: 5rpx;
  color: #747474;
}

.tags-wrap .tag-item:last-of-type{
  margin-right: 30rpx;
}

.shop-scroll{
  height: calc(100% - 95rpx - 80rpx - 100rpx);
}






